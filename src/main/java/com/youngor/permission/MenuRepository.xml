    <select id="query_checkbox" resultType="com.youngor.permission.MenuVO" parameterType="map">
    	select a.*,decode(b.role_id,null,0,1) as checked from t_menu a left join t_role_menu b on a.id=b.menu_id and b.role_id=#{role_id}
    	where
    	<if test="parent_id==null">
    		parent_id is null
    	</if>
    	<if test="parent_id!=null">
    		parent_id=#{parent_id}
    	</if>
    	
    </select> 
     -->
     <select id="query_checkbox" resultType="com.youngor.permission.MenuVO" parameterType="map">
    	select a.*,0 as checked from t_menu a 
    	where
    	<if test="parent_id==null">
    		parent_id is null
    	</if>
    	<if test="parent_id!=null">
    		parent_id=#{parent_id}
    	</if>
    	
    </select> 
    
    <!-- 在登录后，获取某个用户可访问的菜单-->
    <select id="queryByUser" resultType="com.youngor.permission.MenuVO" parameterType="map">
    	select a.* from t_menu a , t_role_user b,t_role_menu c
    	where a.menuType='menu' and b.role_id=c.role_id  and c.menu_id=a.id 
    	<if test="parent_id==null">
    		and a.parent_id is null
    	</if>
    	<if test="parent_id!=null">
    		and a.parent_id=#{parent_id}
    	</if>
    	<if test="user_id!=null ">
    		and b.user_id =#{user_id}
    	</if>
    	
    </select> 
</mapper>

